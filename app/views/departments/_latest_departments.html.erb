<% @departments.each do |department|%>
    <div class="col-3">
        <%= link_to(department_thumbnail(department), department_path(department)) %>
        <h3 class="h5 mt-3"><%= link_to department.name, department_path(department) %></h3>
        <p><%= department.address %></p>
        <div class="details">
        </div>
    </div>
<% end %>